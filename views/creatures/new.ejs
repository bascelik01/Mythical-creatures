<!-- views/creatures/new.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/styles.css">

    <title>Add a New Creature</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Add a New Creature</h1>
    <form action="/users/<%=user._id%>/creatures" method="POST">
<!-- <div>
    <label for="creature">Creature:</label>
    <input type="text" id="creature" name="name" required>
</div> -->
<div>
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" required>
</div>
<div>
    <label for="origin">Origin:</label>
    <textarea name="origin" id="origin"></textarea>
</div>
<div>
    <label for="hp">HP:</label>
    <input type="number" id="hp" name="hp">
</div>
<div>
  <label for="rarity">Rarity:</label>
<select name="rarity" id="rarity">
    <option value="common">Common</option>
    <option value="uncommon">Uncommon</option>
    <option value="rare">Rare</option>
    <option value="mythical">Mythical</option>
    <option value="legendary">Legendary</option>
</select>
</div>
<div>
  <label for="description">Description:</label>
    <textarea name="description" id="description"></textarea>
</div>

<button type="submit">Add creature</button>
    </form>
  </body>
</html>
